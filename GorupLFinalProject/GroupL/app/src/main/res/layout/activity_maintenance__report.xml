<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maintenance__report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context="com.example.sechaba.groupl.Maintenance_Report">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_maintenance"
        android:entries="@array/spinner_maintenance"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_classes"
        android:entries="@array/spinner_ClassNames"
        android:layout_below="@+id/sp_maintenance"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />



    <EditText
        android:id="@+id/description"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Please Enter Description here"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/sp_classes"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/reportmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/customise_btn"
        android:onClick="ReportMain"
        android:text="Submit Report"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true" />
</LinearLayout>
